# ===========================================
# üåê FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These are safe to expose to the browser and should start with REACT_APP_

# Supabase Configuration (Frontend)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_anon_key_here

# Payment Gateway Configuration (Public keys only)
REACT_APP_XENDIT_PUBLIC_KEY=xnd_public_development_your_key_here

# Site Configuration
REACT_APP_SITE_NAME=JB Alwikobra
REACT_APP_SITE_URL=http://localhost:3000
REACT_APP_WHATSAPP_NUMBER=628xxxxxxxxxx

# Maintenance Mode (Frontend)
# Set to 'true' to enable maintenance page for all routes
# Set to 'false' or remove to disable maintenance mode
REACT_APP_MAINTENANCE_MODE=false

# WhatsApp Integration (Frontend)
REACT_APP_WHATSAPP_API_KEY=your_whatsapp_public_key
REACT_APP_WHATSAPP_API_URL=https://api.whatsapp.com
REACT_APP_LOG_WHATSAPP_ACTIVITY=true

# Analytics & Monitoring (Frontend)
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_DEBUG_MODE=true

# Cloudflare Turnstile (Frontend)
REACT_APP_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# ===========================================
# üîí BACKEND ENVIRONMENT VARIABLES
# ===========================================
# ‚ö†Ô∏è  IMPORTANT: These should ONLY be configured in Vercel environment variables
